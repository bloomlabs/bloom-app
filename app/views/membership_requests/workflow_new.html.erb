<%= render 'workflow_header' %>

<%= form_tag do %>
    <div class="field">
      <p>Can you tell us a bit more about your startup?</p>
      <%= text_area_tag(:info) %>
    </div>

    <div class="field">
      <p>When would you start using Bloom's services?</p>
      <% if @bad_start_date %>
          <div class="flash-error">
            Invalid date
          </div>
      <% end %>
      <%= date_select(:startdate, Date.today, with_css_classes: true) %>
    </div>

    <%= submit_tag("Continue") %>
<% end %>

<%= render 'workflow_footer' %>