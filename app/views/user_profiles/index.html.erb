<p id="notice"><%= notice %></p>

<h1>Listing User Profiles</h1>

<table>
  <thead>
    <tr>
      <th>Signup reason</th>
      <th>Date of birth</th>
      <th>Gender</th>
      <th>Student type</th>
      <th>Education status</th>
      <th>Current degree</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_profiles.each do |user_profile| %>
      <tr>
        <td><%= user_profile.signup_reason %></td>
        <td><%= user_profile.date_of_birth %></td>
        <td><%= user_profile.gender %></td>
        <td><%= user_profile.student_type %></td>
        <td><%= user_profile.education_status %></td>
        <td><%= user_profile.current_degree %></td>
        <td><%= user_profile.user_id %></td>
        <td><%= link_to 'Show', user_profile %></td>
        <td><%= link_to 'Edit', edit_user_profile_path(user_profile) %></td>
        <td><%= link_to 'Destroy', user_profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

